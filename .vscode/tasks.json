{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang Aktive Datei kompilieren",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Llibft",
                "-lft",
                "-Ilibft",
                "-v",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/clang"
        }
    ],
    "version": "2.0.0"
}
